{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "outDir": "./dist-scripts",
    "rootDir": "./scripts",

    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["./scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "docs",
    ".github",
    "src",
    "test",
    "**/*spec.ts"
  ]
}